# =============================================================================
# Enterprise AI Foundation Platform - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values for your environment

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://eaif:eaif_dev_password@localhost:5432/eaif"
NEO4J_URI="bolt://localhost:7687"
NEO4J_USER="neo4j"
NEO4J_PASSWORD="neo4j_dev_password"
REDIS_URL="redis://localhost:6379"
TIMESCALE_URL="postgresql://eaif:eaif_dev_password@localhost:5433/eaif_events"

# -----------------------------------------------------------------------------
# Authentication (Auth0 or similar OIDC provider)
# -----------------------------------------------------------------------------
AUTH_DOMAIN="your-tenant.auth0.com"
AUTH_CLIENT_ID="your-client-id"
AUTH_CLIENT_SECRET="your-client-secret"
AUTH_AUDIENCE="https://api.enterprise-ai-foundation.com"
JWT_SECRET="your-jwt-secret-for-dev-only"

# -----------------------------------------------------------------------------
# Microsoft 365 Connector (Azure AD App Registration)
# -----------------------------------------------------------------------------
M365_CLIENT_ID="your-azure-app-id"
M365_CLIENT_SECRET="your-azure-app-secret"
M365_TENANT_ID="your-azure-tenant-id"

# -----------------------------------------------------------------------------
# AI Services
# -----------------------------------------------------------------------------
OPENAI_API_KEY="sk-..."
ANTHROPIC_API_KEY="sk-ant-..."

# -----------------------------------------------------------------------------
# Vector Store (Qdrant)
# -----------------------------------------------------------------------------
QDRANT_URL="http://localhost:6333"

# -----------------------------------------------------------------------------
# MCP Server
# -----------------------------------------------------------------------------
MCP_SERVER_PORT=3002
MCP_SESSION_TTL=3600

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
NODE_ENV="development"
API_PORT=3001
FRONTEND_PORT=3000
LOG_LEVEL="debug"

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
CORS_ORIGINS="http://localhost:3000"
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_CONTENT_ANALYSIS=false
ENABLE_REAL_TIME_SYNC=false

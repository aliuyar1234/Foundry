{
  "name": "enterprise-ai-foundation",
  "version": "0.1.0",
  "description": "Enterprise AI Foundation Platform - Monorepo",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:backend": "pnpm --filter @eaif/backend dev",
    "dev:frontend": "pnpm --filter @eaif/frontend dev",
    "build": "pnpm run --sequential build",
    "test": "pnpm run --parallel test",
    "lint": "pnpm run --parallel lint",
    "lint:fix": "pnpm run --parallel lint:fix",
    "format": "pnpm run --parallel format",
    "typecheck": "pnpm run --parallel typecheck",
    "prisma:generate": "pnpm --filter @eaif/backend prisma:generate",
    "prisma:migrate": "pnpm --filter @eaif/backend prisma:migrate",
    "prisma:studio": "pnpm --filter @eaif/backend prisma:studio",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^9.11.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.12.0"
}
